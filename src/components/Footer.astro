<style>
  footer {
    background-color: hsl(var(--clr-accent-900));
  }
  .contact {
    display: inline-block;
    padding-block: 2rem;
    color: hsl(var(--clr-accent-100));
  }
  .contact h2 {
    text-transform: uppercase;
    line-height: 1.8rem;
    margin-bottom: 1rem;
  }
  .contact ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: none;
    padding: 0;
  }
  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: inherit;
  }
  .contact-item > span {
    min-width: 32px;
  }
  .contact-item .icon {
    width: 32px;
    height: 32px;
  }
  .contact-item p {
    display: flex;
    flex-direction: column;
    line-height: 1.2rem;
  }
  .contact-item p span:first-child {
    color: hsl(var(--clr-accent-300));
  }
  .contact-item p span:last-child {
    font-size: var(--fs-450);
  }
</style>